<div class="p-6 w-full">
  <h1 class="text-lg font-bold mb-4">
    <%= @project.name %>
  </h1>
  <h2 class="text-lg font-bold mb-4">Description</h2>
  <p class="text-gray-700 text-sm mb-2">
    <%= @project.description.presence || "No description" %>
  </p>
  <h2 class="text-lg font-bold mb-4">Comments</h2>
  <div class="flex flex-col space-y-4">
    <div id="comments" class="flex flex-col space-y-4">
      <div class="hidden only:block">No comments</div>
      <%= render @comments %>
    </div>
    <%= turbo_frame_tag Comment.new do %>
      <%= render "comments/form", project: @project, comment: Comment.new %>
    <% end %>
  </div>
</div>
